{% extends 'admin/adminNav.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="tabAccueil">

    <h1>Accueil Admin</h1>
    <button type="button" class="btn btn-success test">
        <a href="{{ path("admin-accueil-top-create") }}" type="button">Ajout√©</a>
    </button>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-striped-columns">        
                <thead> 
                    <tr>
                        <th>Photo</th>
                        <th>Titre</th>
                        <th>Texte</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr> 
                </thead>
                <tbody>
                {% for accueilTop in accueilTops %}
                    <tr>
                        <td>{{accueilTop.Title}}</td>
                        <td>{{accueilTop.Text}}</td>
                        <td><img src={{asset('/uploads/picture/' ~ accueilTop.picture)}} width="200px"></td>
                        <th>
                            <button type="button" class="btn btn-primary">
                                <a href="{{ path("admin-accueil-top-edit", {id:accueilTop.id}) }}" type="button">Modifier</a>
                            </button>
                        </th>
                        <th>
                            <button type="button" class="btn btn-danger">
                                <a href="{{ path("admin-accueil-top-delete", {id:accueilTop.id}) }}" type="button">Supprimer</a>
                            </button>
                        </th>
                    </tr>
                {% endfor %}
                </tbody> 
            </table>
        </div>
    </div>
</div>
{% endblock %}