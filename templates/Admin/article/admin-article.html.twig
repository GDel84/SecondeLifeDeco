{% extends 'admin/base-admin.html.twig' %}

{% block title %}Les Articles!{% endblock %}
{% block body %}
<div class="tabAccueil">
    <div class="container">
      <div class="row featurette">
        <div class="col-md-7">
        {% for articleCenter in articleCenters %}
          <h2 class="featurette-heading text-center">{{articleCenter.title}} <span class="text-muted"></span></h2>
          <p class="lead">{{articleCenter.text}} </p>
        </div>
        <div class="col-md-4">
                <a href="{{ path("admin-article-center-edit", {id:articleCenter.id}) }}" type="button" class="btn btn-primary">Modifier</a>
        {% endfor %}
        </div>
      </div>
    </div>
    <hr class="featurette-divider">

    <div class="container">
      <div class="row featurette">
        <div class="col-md-7">
        {% for articleCenter in articleCenters %}
          <h2 class="featurette-heading text-center">{{articleCenter.title}} <span class="text-muted"></span></h2>
          <p class="lead">{{articleCenter.text}} </p>
        </div>
        <div class="col-md-4">
                <a href="{{ path("admin-article-center-edit", {id:articleCenter.id}) }}" type="button" class="btn btn-primary">Modifier</a>
        {% endfor %}
        </div>
      </div>
    </div>
    <hr class="featurette-divider">

    <div class="container">
        <h1 class="h3 mb-2">Horaire d'ouverture</h1>
            <a href="{{ path("admin-article-create") }}" type="button" class="btn btn-success">Ajout√©</a>
        <div class="shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped-columns">        
                        <thead> 
                            <tr>
                                <th>Nom</th>
                                <th>Qauntiter</th>
                                <th>Photo</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr> 
                        </thead>
                        <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{article.Name}}</td>
                                <td>{{article.Quantity}}</td>
                                <td><img src={{asset('/uploads/picture/' ~ article.picture)}} width="200px"></td>
                                <th>
                                    <a href="{{ path("admin-article-edit", {id:article.id}) }}" type="button" class="btn btn-primary">Modifier</a>
                                </th>
                                <th>
                                    <a href="{{ path("admin-article-delete", {id:article.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody> 
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
