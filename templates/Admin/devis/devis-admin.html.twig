{% block title %}Les devis{% endblock %}

{% block body %}
<div class="titre-section-info">
    <h1 class="">Les Devis</h1>
    <a href="{{ path("admin-devis-create") }}" type="button" class="btn btn-success">Ajouter</a>
</div>

<section class="sectionDevis">
    {% for devis in deviss %}
